<?xml version="1.0"?>
<!-- vim: set fenc=utf-8 et sts=4 ft=xml : -->
<launch>
    <arg name="bagfile" default="/data/rosbag/mission_2018-03-08-16-58-51_rewrite.bag"/>

    <param name="use_sim_time2" type="bool" value="true"/>

    <node
        pkg="rosbag"
        type="play"
        name="replay"
        args="--pause --clock --loop
            --topics /loitor_stereo_visensor/left/image_raw
                    /loitor_stereo_visensor/left/camera_info
                    /loitor_stereo_visensor/right/image_raw
                    /loitor_stereo_visensor/right/camera_info
                    tf
            --bags $(arg bagfile)"
        output="screen">
        <remap from="/loitor_stereo_visensor/left/image_raw"
               to="left/image_raw"/>
        <remap from="/loitor_stereo_visensor/right/image_raw"
               to="right/image_raw"/>
        <remap from="/loitor_stereo_visensor/left/camera_info"
               to="left/camera_info"/>
        <remap from="/loitor_stereo_visensor/right/camera_info"
               to="right/camera_info"/>
     </node>

    <node
        pkg="nodelet"
        type="nodelet"
        name="manager"
        args="manager"
        output="screen"
        />
    <!--
         launch-prefix="nvprof -o manager_triple.prof - -analysis-metrics -s "
         -->

    <node
        pkg="nodelet"
        type="nodelet"
        name="stereo"
        args="load gpuimageproc/Stereoproc manager"
        output="screen"
        >
        <param name="approximate_sync" type="bool" value="true"/>
    </node>

</launch>
